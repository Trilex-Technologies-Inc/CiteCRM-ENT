<?xml version="1.0"?>
<schema version="0.2">
	<table name="category">
		<field name="category_id" type="I" size="20">
			<KEY/>
			<AUTOINCREMENT/>
		</field>
		<field name="category_image" type="C" size="64"></field>
		<field name="category_parent_id" type="I" size="11"></field>
		<field name="category_sort_order" type="I" size="11"></field>
		<field name="category_status" type="I" size="1"></field>
		<field name="last_modified" type="T">
			<DEFAULT value="CURRENT_TIMESTAMP"/>
		</field>
		<index name="category_parent_id">
			<col>category_parent_id</col>
		</index>
	</table>
</schema>