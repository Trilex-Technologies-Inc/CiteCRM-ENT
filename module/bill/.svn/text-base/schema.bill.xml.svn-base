<?xml version="1.0"?>
<schema version="0.2">
	<table name="bill">
		<field name="bill_id" type="I" size="20">
			<KEY/>
			<AUTOINCREMENT/>
		</field>
		<field name="vendor_id" type="I" size="20">
			<NOTNULL/>
			<DEFAULT value="0"/>
		</field>
		<field name="bill_date_create" type="I" size="20">
			<NOTNULL/>
			<DEFAULT value="0"/>
		</field>
		<field name="bill_due_date" type="I" size="20">
			<NOTNULL/>
			<DEFAULT value="0"/>
		</field>
		<field name="bill_amount_due" type="N" size="10">
			<NOTNULL/>
			<DEFAULT value="0.0000"/>
		</field>
		<field name="bill_amount_paid" type="N" size="10"></field>
		<field name="bill_ref_num" type="C" size="100"></field>
		<field name="bill_memo" type="X"></field>
		<field name="bill_paid" type="I" size="4"></field>
		<field name="last_modified" type="T">
			<DEFAULT value="CURRENT_TIMESTAMP"/>
		</field>
		<index name="vendor_id">
			<col>vendor_id</col>
		</index>
	</table>
</schema>