<?xml version="1.0"?>
<schema version="0.2">
	<table name="activation_code">
		<field name="activation_code_id" type="I" size="20">
			<KEY/>
			<AUTOINCREMENT/>
		</field>
		<field name="user_id" type="I" size="20">
			<NOTNULL/>
			<DEFAULT value="0"/>
		</field>
		<field name="account_id" type="I" size="20">
			<NOTNULL/>
			<DEFAULT value="0"/>
		</field>
		<field name="activation_code_text" type="C" size="60">
			<NOTNULL/>
		</field>
		<field name="activation_code_type" type="C" size="10">
			<NOTNULL/>
			<DEFAULT value="Password"/>
		</field>
		<field name="activation_code_create" type="I" size="20">
			<NOTNULL/>
			<DEFAULT value="0"/>
		</field>
		<field name="last_modified" type="T">
			<DEFAULT value="CURRENT_TIMESTAMP"/>
		</field>
		<index name="user_id">
			<col>user_id</col>
			<col>account_id</col>
		</index>
	</table>
</schema>