<?xml version="1.0"?>
<schema version="0.2">
	<table name="invoice">
		<field name="invoice_id" type="I" size="20">
			<KEY/>
			<AUTOINCREMENT/>
		</field>
		<field name="invoice_create_date" type="I" size="20"></field>
		<field name="invoice_create_by" type="I" size="20"></field>
		<field name="invoice_due_date" type="I" size="20"></field>
		<field name="invoice_amount" type="N" size="10"></field>
		<field name="invoice_discount_amount" type="N" size="6"></field>
		<field name="invoice_total_amount" type="N" size="10"></field>
		<field name="invoice_status" type="I" size="1"></field>
		<field name="invoice_paid_date" type="C" size="20"></field>
		<field name="invoice_paid_amount" type="N" size="10"></field>
		<field name="invoice_payment_type" type="I" size="4"></field>
		<field name="invoice_barcode" type="C" size="64"></field>
		<field name="invoice_payment_enter_by" type="I" size="20"></field>
		<field name="invoice_memo" type="X"></field>
		<field name="last_modified" type="T">
			<DEFAULT value="CURRENT_TIMESTAMP"/>
		</field>
		<index name="invoice_create_by">
			<col>invoice_create_by</col>
		</index>
		<index name="invoice_payment_type">
			<col>invoice_payment_type</col>
		</index>
		<index name="invoice_payment_enter_by">
			<col>invoice_payment_enter_by</col>
		</index>
	</table>
</schema>