<?xml version="1.0"?>
<schema version="0.2">
	<table name="campaign">
		<field name="campaign_id" type="I" size="20">
			<KEY/>
			<AUTOINCREMENT/>
		</field>
		<field name="campaign_type_id" type="I" size="20"></field>
		<field name="campaign_name" type="C" size="128">
			<NOTNULL/>
		</field>
		<field name="campaign_start_date" type="I" size="20"></field>
		<field name="campaign_end_date" type="I" size="20"></field>
		<field name="campaign_cost" type="N" size="15"></field>
		<field name="campaign_active" type="I" size="3"></field>
		<field name="last_modified" type="T">
			<DEFAULT value="CURRENT_TIMESTAMP"/>
		</field>
		<index name="campaign_type_id">
			<col>campaign_type_id</col>
		</index>
	</table>
</schema>