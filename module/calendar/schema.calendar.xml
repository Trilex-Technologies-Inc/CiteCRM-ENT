<?xml version="1.0"?>
<schema version="0.2">
	<table name="calendar">
		<field name="calendar_id" type="I" size="20">
			<KEY/>
			<AUTOINCREMENT/>
		</field>
		<field name="calendar_year" type="I" size="20">
			<NOTNULL/>
		</field>
		<field name="calendar_month" type="I" size="20">
			<NOTNULL/>
		</field>
		<field name="calendar_day" type="I" size="20">
			<NOTNULL/>
		</field>
		<field name="calendar_hour" type="I" size="20">
			<NOTNULL/>
		</field>
		<field name="calendar_min" type="I" size="20">
			<NOTNULL/>
		</field>
		<field name="calendar_type" type="C" size="20">
			<NOTNULL/>
		</field>
		<field name="user_id" type="I" size="20">
			<NOTNULL/>
		</field>
		<field name="calendar_title" type="C" size="128">
			<NOTNULL/>
		</field>
		<field name="calendar_text" type="X">
			<NOTNULL/>
		</field>
		<field name="calendar_avtive" type="I" size="3"></field>
		<field name="calendar_private" type="I" size="3"></field>
		<field name="last_modified" type="T">
			<DEFAULT value="CURRENT_TIMESTAMP"/>
		</field>
		<index name="user_id">
			<col>user_id</col>
		</index>
	</table>
</schema>