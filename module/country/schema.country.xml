<?xml version="1.0"?>
<schema version="0.2">
	<table name="country">
		<field name="country_id" type="I" size="20">
			<KEY/>
			<AUTOINCREMENT/>
		</field>
		<field name="country_code" type="C" size="10">
			<NOTNULL/>
		</field>
		<field name="country_text" type="C" size="100">
			<NOTNULL/>
		</field>
		<field name="country_active" type="I" size="4">
			<NOTNULL/>
			<DEFAULT value="0"/>
		</field>
		<field name="last_modified" type="T">
			<DEFAULT value="CURRENT_TIMESTAMP"/>
		</field>
		<index name="country_code">
			<UNIQUE/>
			<col>country_code</col>
		</index>
	</table>
</schema>