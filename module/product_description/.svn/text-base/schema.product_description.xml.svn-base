<?xml version="1.0"?>
<schema version="0.2">
	<table name="product_description">
		<field name="product_description_id" type="I" size="20">
			<KEY/>
			<AUTOINCREMENT/>
		</field>
		<field name="product_id" type="I" size="11"></field>
		<field name="product_name" type="C" size="64"></field>
		<field name="product_description" type="X"></field>
		<field name="product_url" type="C" size="64"></field>
		<field name="last_modified" type="T">
			<DEFAULT value="CURRENT_TIMESTAMP"/>
		</field>
		<index name="product_id">
			<col>product_id</col>
		</index>
	</table>
</schema>